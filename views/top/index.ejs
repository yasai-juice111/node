<div id="stage" class="lunch" style="position:relative">

    <h1 class="lunch_title"><%= dateformat(saleDate, 'yyyy年m月dd日') %>のメニュー</h1>
    <% if (lunchBoxList.length > 0) { %>
	    <ul class="lunch_list_wrapper">
		    <% _.each(lunchBoxList, function(lunchBox){ %>
				<li class="lunch_menu_layout">
		            <div class="lunch_menu_image">
		                <img src="<%= lunchBox.imagePath %>" alt="" width="100%;" height="100%;">
		            </div>
		            <div class="text_layout_s maL0">
		                <p><%= lunchBox.name %></p>
		                <p><%= lunchBox.store %></p>
		                <p>
		                    残り <span class="size_m"><%= lunchBox.amount - lunchBox.currentRecevedAmount %>/<span class="font_color_orange"><%= lunchBox.amount %></span></span>
		                    <span class="text_right"><%= lunchBox.price %>円</span>
		                </p>
		            </div>
	        		<a href="/top/detail?id=<%= lunchBox.id %>" class="order_button">詳細</a>
		        </li>
		    <% }); %>
	    </ul>
    <% } else { %>
	    <img src="../img/99_lunch/logo_001.png" alt="" width="75%;" height="750%;">
	    <div class="center">
	        <p class="color_red size_ll">更新中...しばらくお待ち下さい</p>
	    </div>
	<% }%>
</div>